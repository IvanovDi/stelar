.socialList
  list-style-type none
  display inline-block
  padding-inline-start 0
  color #000
    @media screen and (max-width 768px)
      display inline-block
      margin-left -1.2rem
  &__item
    display inline-block
    border 1px solid #fff
    border-radius 100%
    width 3.7rem   
    padding .5rem
    text-align center
    transition .5s
    margin-right .7rem
    &:hover
      background rgba(#fff,.3)
    & a
      text-decoration none
      color #fff