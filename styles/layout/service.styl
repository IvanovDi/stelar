.service
  background #fff
  padding-top 5rem
  &Item
    text-align center
    &__caption
      font-size 1.8rem
      font-weight 300
      color #7d7d7d
    &__description
      font-size 1.3rem
      font-weight 300
      color #808080
      line-height 2.3rem
    &__icon
      doubleBorder(1px, black, 1rem)
      display inline-block
      font-size 6.2rem
      height 10rem
      width @height
      line-height @height
      border-radius 100%
      &_code
        color #efa8b0
      &_files
        color #a89cc8
      &_diamond
        color #8cc9f0
