.statistic
  background #fff
  text-align center
  padding 3rem 0 6rem
  border-bottom 1px solid grey
  &Board
    padding-inline-start 0
    list-style none
    font-weight 100
    &__icon
      padding-top 1.5rem
      font-size 3rem
      @media (max-width 1590px) and (min-width 361px)
        font-size 2rem
    &__digit
      @media (max-width 1590px) and (min-width 361px)
        font-size 2rem
        margin .5rem auto
      font-size 3rem
      margin 1.5rem auto
    &__description
      font-size 1.5rem
      @media (max-width 1590px) and (min-width 361px)
        font-size .7rem
    &__item
      margin 0 -.1rem
      color #fff
      display inline-block
      padding 1.5rem 4.5rem
      line-height 1.7rem
      @media (max-width 1590px) and (min-width 361px)
        padding .5rem 1.5rem
      @media (max-width 480px)
        display block
      &_fork
        border-top-left-radius 5px
        border-bottom-left-radius 5px
        background #EFA8B0
        @media (max-width 480px)
          border-radius 0
      &_folder
        background #C79CC8
      &_signal
        background #A89CC8
      &_laptop
        background #9BB2E1
      &_diamond
        border-top-right-radius 5px
        border-bottom-right-radius 5px
        background #8CC9F0
  &__content
    -moz-column-width  30rem
    padding 0 8rem
    text-align justify
    font-size 1.4rem
    font-weight 300
    color #808080
    line-height 2.3rem
    -moz-column-gap 3rem
    -webkit-column-gap 3rem
    margin 4rem 0

